{
    "env": {
        "node": true,
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jest/globals": true,
        "webextensions": true
    },
    "extends": ["eslint:recommended", "plugin:import/errors", "plugin:import/warnings", "plugin:jest/recommended", "plugin:vue/strongly-recommended"],
    "plugins": ["jest"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-console": ["error", {
            "allow": ["warn", "error"]
        }],
        "no-unused-vars": ["warn"],
        "vue/html-indent": ["error", 4]
    }
}